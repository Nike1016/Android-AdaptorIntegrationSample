<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                    android:startColor="#c64a0d"
                    android:endColor="#e66a2d"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#d65a1d" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#e66a2d"
                    android:endColor="#c64a0d"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#d65a1d" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>